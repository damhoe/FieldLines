<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?colorOnTertiary"
    app:cardCornerRadius="16dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:foreground="?selectableItemBackground"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:srcCompat="@drawable/ic_edit_24dp"
            app:tint="?colorTertiary"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20"/>

        <TextView
            android:id="@+id/title_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charge"
            app:layout_constraintStart_toStartOf="@id/guideline_25"
            app:layout_constraintEnd_toEndOf="@id/guideline_25"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorTertiary"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            />

        <TextView
            android:id="@+id/text_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-1.0"
            app:layout_constraintStart_toStartOf="@id/title_charge"
            app:layout_constraintEnd_toEndOf="@id/title_charge"
            app:layout_constraintTop_toBottomOf="@id/title_charge"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            />

        <TextView
            android:id="@+id/title_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            app:layout_constraintStart_toStartOf="@id/guideline_50"
            app:layout_constraintEnd_toEndOf="@id/guideline_50"
            app:layout_constraintTop_toTopOf="@id/title_charge"
            android:textColor="?attr/colorTertiary"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            />

        <TextView
            android:id="@+id/text_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(10,\t -100)"
            app:layout_constraintStart_toStartOf="@id/title_position"
            app:layout_constraintEnd_toEndOf="@id/title_position"
            app:layout_constraintTop_toBottomOf="@id/title_position"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>