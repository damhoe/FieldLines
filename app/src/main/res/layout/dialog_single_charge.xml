<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_x_coordinate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/input_amount"
        app:layout_constraintEnd_toStartOf="@id/input_y_coordinate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Position x"
        >

        <com.google.android.material.textfield.TextInputEditText
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:id="@+id/edit_x_coordinate"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number"
            android:textAlignment="center"
            tools:text="-158"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_y_coordinate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/input_x_coordinate"
        app:layout_constraintEnd_toEndOf="@id/input_amount"
        app:layout_constraintTop_toTopOf="@id/input_x_coordinate"
        android:hint="Position y"
        >

        <com.google.android.material.textfield.TextInputEditText
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:id="@+id/edit_y_coordinate"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number"
            android:textAlignment="center"
            tools:text="15"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_x_coordinate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:hint="Charge"
        >

        <com.google.android.material.textfield.TextInputEditText
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:id="@+id/edit_amount"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned|number"
            android:textAlignment="center"
            tools:text="-1.0"
            />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>